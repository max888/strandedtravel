= form_for(@destination) do |f|
  - if @destination.errors.any?
    #error_explanation
      %h2
        = pluralize(@destination.errors.count, "error")
        prohibited this destination from being saved:
      %ul
        - @destination.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :country
    %br/
    = f.text_field :country
  .field
    = f.label :description
    %br/
    = f.text_area :description

  .field
    = f.label :image 
    %br/
    = f.file_field :photo

  .field
    = f.label :latitude
    %br/
    = f.number_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.number_field :longitude
  / .field
  /   = f.hidden_field :user_id 
  .actions
    = f.submit