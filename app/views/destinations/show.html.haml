#map-canvas




.eat_container
  %h2 Eat
  %ol
    - @eats.each do |a|
      %li= a.url.blank? ? a.name : link_to(a.name, a.url)
      =a.plusminus 
      -if current_user.voted_against?(a) || current_user.voted_for?(a)
        =link_to 'remove vote', remove_vote_activity_path(a), :method => :post
      -else
        =link_to 'vote up', vote_up_activity_path(a), :method => :post
        =link_to 'vote down', vote_down_activity_path(a), :method => :post
      


