!!!
%html
  %head
    %title StrandedTravel
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    .container
      = link_to 'Home', destinations_path

      -if current_user
        =current_user.email

      %nav 
        -if current_user
          %p= link_to 'sign out', destroy_user_session_path, method: :delete
        -else
          %p= link_to 'sign in', new_user_session_path
          %p= link_to 'sign up', new_user_registration_path
          %p= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)

        = link_to 'New Destination', new_destination_path






      %p.notice= notice
      %p.alert= alert
      = yield